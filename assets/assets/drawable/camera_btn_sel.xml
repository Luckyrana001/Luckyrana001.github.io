<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use grey -->
    <item android:drawable="@drawable/camera_btn_white" android:state_focused="true" android:state_pressed="true" />
    <!-- When not selected, use white-->
    <item android:drawable="@drawable/camera_btn_white" android:state_focused="false" android:state_pressed="true" />
    <item android:drawable="@drawable/camera_btn_white" android:state_focused="true" android:state_pressed="false" />
    <item android:drawable="@drawable/camera_btn" android:state_focused="false" android:state_pressed="false" />

</selector>