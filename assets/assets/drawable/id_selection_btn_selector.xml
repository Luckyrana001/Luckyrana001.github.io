<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:innerRadiusRatio="1" android:shape="rectangle">
            <solid android:color="@color/id_selection_selector_background_color" />

            <stroke android:width="1dp" android:color="@color/blue_yonder" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- button focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:innerRadiusRatio="1" android:shape="rectangle">
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/blue_yonder" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- button pressed -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:innerRadiusRatio="1" android:shape="rectangle">
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/blue_yonder" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>